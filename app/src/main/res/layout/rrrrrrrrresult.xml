<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/Black"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     tools:context="com.example.michalzahir.pagk16.resultActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomLinear"
        android:gravity="top"
        android:weightSum="2"

        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="1:"
            android:id="@+id/firstUserResult"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/result"
            android:textSize="200sp"
            android:layout_weight="1"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="0"
            android:textColor="@color/result"
            android:id="@+id/secondUserResult"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_alignTop="@+id/firstUserResult"
            android:textSize="200sp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/firstUserResult" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:id="@+id/linearLayout"
        android:layout_alignEnd="@+id/bottomLinear"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="unknown:"
        android:id="@+id/firstUserName"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/result"
        android:textSize="45sp"
        android:layout_weight="1"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="unknown"
        android:textColor="@color/result"
        android:id="@+id/secondUserName"
        android:layout_alignParentEnd="true"
        android:gravity="center"
         android:textSize="45sp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/firstUserResult" />

        ></LinearLayout>
</RelativeLayout>
